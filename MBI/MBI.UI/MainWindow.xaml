<Window x:Class="MBI.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
		Height="350"
		Width="525"
		DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModel}">
	<StackPanel>
		<Button Content="Choose file..." Command="{Binding ChooseFile}" />
		<Button Content="Assemble" Command="{Binding Assemble}" />
	</StackPanel>
</Window>
